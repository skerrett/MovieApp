<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".MainActivity">

    <!--get movies by name-->
    <Button
        android:id="@+id/search_by_name_button"
        android:layout_width="185dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="200dp"
        android:text="@string/get_all_by_name" />

    <!-- get movies by release_year-->
    <Button
        android:id="@+id/button_id4"
        android:layout_width="185dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="280dp"
        android:text="@string/get_all_by_release_year" />

    <!-- get movies by rating -->
    <Button
        android:id="@+id/button_id5"
        android:layout_width="185dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="360dp"
        android:text="@string/get_all_by_rating" />

    <!-- get all movies with length more than specified -->
    <Button
        android:id="@+id/button_id6"
        android:layout_width="185dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="440dp"
        android:text="@string/get_all_length_more" />

    <!-- get all movies with length less than specified -->

    <Button
        android:id="@+id/button_id7"
        android:layout_width="185dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="520dp"
        android:text="@string/get_all_length_less" />

    <!-- get all movies -->
    <Button
        android:id="@+id/show_all_button"
        android:layout_width="185dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:text="@string/get_all" />

    <!--  get all movies by genre -->
    <Button
        android:id="@+id/search_by_genre_button"
        android:layout_width="185dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="120dp"
        android:text="@string/get_all_by_genre" />

</RelativeLayout>